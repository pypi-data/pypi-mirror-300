root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

[*.py]
max_line_length = 120
indent_style = space
indent_size = 4

[*.{rst,ini,cfg}]
indent_style = space
indent_size = 4

[*.{md,yml}]
indent_style = space
indent_size = 2

[*.{js,json,md,toml,yaml,yml}]
indent_size = 2
