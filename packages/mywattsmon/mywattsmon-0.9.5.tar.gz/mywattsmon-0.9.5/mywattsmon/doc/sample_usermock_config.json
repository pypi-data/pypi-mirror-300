{
    "title":"mywattsmon configuration",
    "loglevel":"info",
    "logtofile":"false",
    "port":"42001",
    "window":{
        "title":"Status",
        "size":"max",
        "interval":{"default":30,"20:00-22:00":60,"22:00-05:00":300},
        "nightmode":{"timeframe":"22:00-05:00","colors":"ref0"},
        "colors":{
            "window":{"bg":"green"},
            "values":{
                "ref0":{"bg":"black","fg":"gray7"},
                "ref1":{
                    "bg+":"darkseagreen","fg+":"white",
                    "bg-":"white","fg-":"black"
                },
                "ref2":{"bg":"white","fg":"black"},
                "ref3":{"bg":"black","fg":"white"},
                "ref4":{"bg":"white","fg":"blue"}
            }
        },
        "grid":{
            "W":{
                "units":"M1","var":"power","colors":"ref1",
                "rownum":0,"colnum":0,"rowspan":1,"colspan":2
            },
            "kWh":{
                "units":"M1","var":"energy","colors":"ref2",
                "rownum":0,"colnum":2,"rowspan":1,"colspan":2
            },
            "L1":{
                "units":"M2","var":"power","colors":"ref3",
                "rownum":1,"colnum":0,"rowspan":1,"colspan":1
            },
            "L2":{
                "units":"M3","var":"power","colors":"ref3",
                "rownum":1,"colnum":1,"rowspan":1,"colspan":1
            },
            "L3":{
                "units":"M4","var":"power","colors":"ref3",
                "rownum":1,"colnum":2,"rowspan":1,"colspan":1
            },
            "Refresh":{
                "units":"<refresh>","var":"<countdown>","colors":"ref4",
                "rownum":1,"colnum":3,"rowspan":1,"colspan":1
            }
        }
    },
    "database":{
        "times":["00:00","03:00","06:00","09:00","12:00","15:00",
                "18:00","21:00","23:59"],
        "tablename":"kwh",
        "columns":{
            "em":{"units":"M1","var":"energy"},
            "l1":{"units":"M2","var":"energy"},
            "l2":{"units":"M3","var":"energy"},
            "l3":{"units":"M4","var":"energy"}
        }
    },
    "devices":{
        "UserMock":{
            "module":"mywattsmon.app.device.user.usermock",
            "units":{
                "M1":{"uid":"m1"},
                "M2":{"uid":"m2"},
                "M3":{"uid":"m3"},
                "M4":{"uid":"m4"}
            }
        }
    }
}
